<div class="bg-light py-3">
    <div class="container">
        <div class="row">

            <div class="col-md-12 mb-0"><a href="/">Trang chủ</a> <span class="mx-2 mb-0">/</span> <strong
                    class="text-black">{{title}}</strong></div>
        </div>
    </div>
</div>

<div class="site-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 mb-5 mb-md-0">
                <h2 class="h3 mb-3 text-black">{{title}}</h2>
                <div class="p-3 p-lg-5 border">
                    <form action="/user/recover" method="post">
                        <div class="form-group row">
                            <div class="col-sm">
                                <label for="email" class="text-black">Địa chỉ email</label>
                                <input type="email" class="form-control" id="email" name="email" placeholder="Email" required>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm">
                                <span class="text-danger">{{message}}</span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-md">
                                <button type="submit" class="btn btn-primary btn-lg py-3 btn-block">Gửi
                                    lại mật khẩu</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>